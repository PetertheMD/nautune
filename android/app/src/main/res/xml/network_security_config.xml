<?xml version="1.0" encoding="utf-8"?>
<!--
  Network Security Configuration for Nautune

  This app needs to connect to user-specified Jellyfin media servers.
  Many users run Jellyfin on local networks without SSL certificates,
  so cleartext (HTTP) traffic must be permitted.

  HTTPS is always preferred when available.
-->
<network-security-config>
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
